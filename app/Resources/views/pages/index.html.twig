{% extends 'base.html.twig' %}

{% block body %}
    <div class="restaurant-grid reference-grid">
        <div class="row">
            <div class="col">
                <h3 class="title">{restaurant name}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <ul class="sort">
                    {% for sortingValue in sortingValues %}
                    <li>{{ sortingValue }}&nbsp;
                        <span class="badge badge-primary {{ sortingValue }}">{0}</span>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <ul class="favourite-and-status">
                    <li>
                        <a href="#" class="favourite add" data-uid="{id}">
                            <i class="fa fa-heart"></i>
                        </a>
                    </li>
                    <li>
                        <span class="badge badge-primary status">{n/a}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="restaurant-grid-container">

    </div>
{% endblock %}
